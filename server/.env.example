# Environment variables for Impetus Lock Server
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# LLM API Configuration (for Instructor + Pydantic)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx
# Or use other providers:
# ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx
# AZURE_OPENAI_API_KEY=xxxxxxxxxxxxx

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Configuration (when implemented)
# DATABASE_URL=sqlite:///./impetus_lock.db
# Or PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/impetus_lock

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_MUSE_MODE=True
ENABLE_LOKI_MODE=False
